# Production Environment Variables for VeriGrade
NODE_ENV=production

# Database Configuration (Replace with your production database)
DATABASE_URL="postgresql://username:password@your-db-host:5432/verigrade_prod"
DIRECT_URL="postgresql://username:password@your-db-host:5432/verigrade_prod"

# JWT Configuration
JWT_SECRET="your-production-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT="3001"
FRONTEND_URL="https://your-verigrade-domain.vercel.app"
BACKEND_URL="https://your-verigrade-api.vercel.app"

# Security
CORS_ORIGIN="https://your-verigrade-domain.vercel.app"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Production API Keys (Replace with real values)
STRIPE_SECRET_KEY="sk_live_your-production-stripe-key"
STRIPE_PUBLISHABLE_KEY="pk_live_your-production-stripe-key"
STRIPE_WEBHOOK_SECRET="whsec_your-production-webhook-secret"

OPENAI_API_KEY="sk-your-production-openai-key"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-production-email@gmail.com"
SMTP_PASS="your-production-app-password"

# Redis Configuration
REDIS_URL="redis://your-redis-host:6379"


# Core Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/verigrade_dev
DIRECT_URL=postgresql://username:password@localhost:5432/verigrade_dev

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration (for background job processing)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration (for AI categorization)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@verigrade.com

# AWS S3 Configuration (for file storage)
S3_BUCKET=verigrade-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-aws-access-key
S3_SECRET_ACCESS_KEY=your-aws-secret-key

# Plaid Configuration (for bank connections)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# n8n Configuration (for workflow automation)
N8N_API_URL=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key

# PostHog Configuration (for analytics)
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# GitHub Configuration (for issue creation)
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-org/your-repo

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Worker Configuration
WORKER_PORT=4000
WORKER_CONCURRENCY=5

# Development Settings
TEST_MODE=false
DEBUG=false
LOG_LEVEL=info
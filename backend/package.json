{
  "name": "@verigrade/backend",
  "version": "1.0.0",
  "description": "VeriGrade Bookkeeping Platform Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:simple": "node server.js",
    "dev:enhanced": "nodemon src/index.enhanced.ts",
    "dev:ai-features": "nodemon ai-features-server.js",
    "start:ai-features": "node ai-features-server.js",
    "build": "tsc",
    "build:enhanced": "tsc src/index.enhanced.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop true --allowSyntheticDefaultImports true --strict true --skipLibCheck true",
    "build:simple": "tsc src/index.simple.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop true --allowSyntheticDefaultImports true --strict true --skipLibCheck true",
    "build:worker": "tsc src/queue/categorizerWorker.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop true --allowSyntheticDefaultImports true --strict true --skipLibCheck true",
    "start": "node dist/index.js",
    "start:enhanced": "node dist/index.enhanced.js",
    "start:simple": "node server.js",
    "start:worker": "node dist/queue/categorizerWorker.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test:db": "node test-database-connection.js",
    "test:stripe": "node test-stripe-connection.js",
    "setup:prod": "node ../setup-production-features.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@prisma/client": "^5.7.0",
    "@stripe/stripe-js": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "n8n-nodes-mcp": "^0.1.29",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.14.0",
    "plaid": "^39.0.0",
    "qrcode": "^1.5.3",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "stripe": "^14.25.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4",
    "@sentry/node": "^7.114.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.17.3",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "bookkeeping",
    "accounting",
    "api",
    "nodejs",
    "express",
    "typescript",
    "prisma"
  ],
  "author": "VeriGrade Team",
  "license": "MIT"
}

{
  "name": "VeriGrade Bookkeeping",
  "description": "Connect VeriGrade with 1000+ apps to automate your bookkeeping workflows",
  "version": "1.0.0",
  "homepageUrl": "https://verigrade.com",
  "logo": "https://verigrade.com/logo.png",
  "authentication": {
    "type": "oauth2",
    "oauth2Config": {
      "authorizeUrl": "https://verigrade.com/oauth/authorize",
      "tokenUrl": "https://verigrade.com/oauth/token",
      "scope": "read write",
      "refreshTokenUrl": "https://verigrade.com/oauth/refresh"
    }
  },
  "triggers": [
    {
      "key": "new_transaction",
      "noun": "Transaction",
      "display": {
        "label": "New Transaction",
        "description": "Triggers when a new transaction is created"
      },
      "operation": {
        "type": "polling",
        "perform": {
          "url": "https://verigrade.com/api/zapier/triggers/new-transaction",
          "method": "GET"
        },
        "sample": {
          "id": "txn_123",
          "amount": 100.00,
          "description": "Office supplies",
          "type": "EXPENSE",
          "category": "Office Supplies",
          "date": "2023-12-15T10:30:00Z",
          "customer": {
            "id": "cust_456",
            "name": "ABC Company"
          }
        }
      }
    },
    {
      "key": "new_customer",
      "noun": "Customer",
      "display": {
        "label": "New Customer",
        "description": "Triggers when a new customer is added"
      },
      "operation": {
        "type": "polling",
        "perform": {
          "url": "https://verigrade.com/api/zapier/triggers/new-customer",
          "method": "GET"
        },
        "sample": {
          "id": "cust_789",
          "name": "XYZ Corp",
          "email": "contact@xyzcorp.com",
          "phone": "+1-555-0123",
          "address": {
            "street": "123 Main St",
            "city": "New York",
            "state": "NY",
            "zip": "10001"
          },
          "created_at": "2023-12-15T10:30:00Z"
        }
      }
    },
    {
      "key": "invoice_sent",
      "noun": "Invoice",
      "display": {
        "label": "Invoice Sent",
        "description": "Triggers when an invoice is sent to a customer"
      },
      "operation": {
        "type": "polling",
        "perform": {
          "url": "https://verigrade.com/api/zapier/triggers/invoice-sent",
          "method": "GET"
        },
        "sample": {
          "id": "inv_123",
          "number": "INV-2023-001",
          "customer": {
            "id": "cust_456",
            "name": "ABC Company"
          },
          "amount": 1500.00,
          "status": "SENT",
          "sent_at": "2023-12-15T10:30:00Z",
          "due_date": "2024-01-15T00:00:00Z"
        }
      }
    },
    {
      "key": "payment_received",
      "noun": "Payment",
      "display": {
        "label": "Payment Received",
        "description": "Triggers when a payment is received"
      },
      "operation": {
        "type": "polling",
        "perform": {
          "url": "https://verigrade.com/api/zapier/triggers/payment-received",
          "method": "GET"
        },
        "sample": {
          "id": "pay_123",
          "amount": 1500.00,
          "method": "BANK_TRANSFER",
          "reference": "TXN-789",
          "received_at": "2023-12-15T10:30:00Z",
          "invoice": {
            "id": "inv_123",
            "number": "INV-2023-001"
          }
        }
      }
    }
  ],

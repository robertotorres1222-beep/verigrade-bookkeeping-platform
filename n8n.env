# n8n Configuration for VeriGrade Integration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=verigrade123

# API Settings
N8N_PUBLIC_API_DISABLED=false
N8N_JWT_SECRET=verigrade-jwt-secret-key-2025

# Database
DB_TYPE=sqlite
DB_SQLITE_DATABASE=./n8n.sqlite
DB_SQLITE_POOL_SIZE=5

# Security
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Task Runners
N8N_RUNNERS_ENABLED=true

# CORS
N8N_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file

# Webhook
WEBHOOK_URL=http://localhost:5678/







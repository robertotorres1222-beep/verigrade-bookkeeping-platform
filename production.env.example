# Production Environment Variables
# Copy this file to .env.local for local development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/verigrade_production"
DIRECT_URL="postgresql://username:password@localhost:5432/verigrade_production"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Stripe
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Plaid
PLAID_CLIENT_ID="your_plaid_client_id"
PLAID_SECRET="your_plaid_secret"
PLAID_ENV="production"

# OpenAI
OPENAI_API_KEY="your_openai_api_key"

# PostHog
NEXT_PUBLIC_POSTHOG_KEY="phc_your_posthog_project_key"
NEXT_PUBLIC_POSTHOG_HOST="https://us.i.posthog.com"

# Email (SendGrid or AWS SES)
EMAIL_PROVIDER="sendgrid"
SENDGRID_API_KEY="your_sendgrid_api_key"
FROM_EMAIL="noreply@verigrade.com"

# Redis (for rate limiting and caching)
REDIS_URL="redis://localhost:6379"

# URLs
FRONTEND_URL="https://your-domain.com"
BACKEND_URL="https://api.your-domain.com"

# GitHub (for issue creation)
GITHUB_TOKEN="your_github_token"
GITHUB_OWNER="your_github_username"
GITHUB_REPO="verigrade-bookkeeping-platform"

# n8n
N8N_API_KEY="your_n8n_api_key"

# Security
CORS_ORIGIN="https://your-domain.com"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Node Environment
NODE_ENV="production"




